<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.nammametromvvm">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".utility.ApplicationClass"
        android:allowBackup="false"
        android:fullBackupOnly="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NammaMetroMVVM"
        android:usesCleartextTraffic="true"
        tools:targetApi="m"
        tools:ignore="DataExtractionRules">
        <activity
            android:name="com.example.nammametromvvm.ui.splashscreen.SplashScreenActivity"
            android:exported="true"
            android:noHistory="true"
            android:theme="@style/Theme.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.nammametromvvm.ui.homescreen.activity.HomeActivity"
            android:exported="false" />
        <activity
            android:name="com.example.nammametromvvm.ui.login.ui.activity.LoginActivity"
            android:noHistory="true"
            android:exported="false" />
    </application>

</manifest>